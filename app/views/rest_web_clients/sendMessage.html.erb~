    <% if @rest_web_client.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@rest_web_client.errors.count, "error") %> prohibited this rest_web_client from being saved:</h2>

          <ul>
            <% @rest_web_client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.text_field :password %>
    </div>
    <div class="field">
      <%= f.label :msg %><br>
      <%= f.text_field :msg %>
    </div>

    <div class="field">
     Receiver-Box
    </div>
	<br>
    <%= f.submit 'Nachricht senden'  :class => "btn btn-success btn-lg" %>


<% end %>
<div class="btn btn-lg">
<%=  @users %>
<%= link_to 'Back', rest_web_clients_path %>
</div>
